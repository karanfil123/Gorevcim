
@{
    ViewBag.Title = "Pasif Ürünler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model List<ProductCategoryDto>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">

                <table class="table table-centered" id="ProductsCategoryTable">

                    <thead>
                        <tr>

                            <th scope="col">Id</th>
                            <th scope="col">Name</th>
                            <th scope="col">Category</th>
                            <th scope="col">Code</th>
                            <th scope="col">Barcode</th>
                            <th scope="col">Sale Price</th>
                            <th scope="col">TechnicalWebUrl</th>
                            <th scope="col">ExplanationWebUrl</th>
                            <th scope="col" style="width: 200px;">Processing</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>   @item.Id </td>
                                <td>@item.Name</td>
                                <td>@item.Category.Name</td>
                                <td>@item.Code</td>
                                <td>@item.Barcode</td>
                                <td>@item.SalePrice</td>
                                <td>@item.TechnicalWebUrl</td>
                                <td>@item.ExplanationWebUrl</td>
                                <td>
                                    <ul class="list-inline mb-0">
                                        <li class="list-inline-item">
                                            <a asp-area="" asp-controller="Products" asp-action="ProductUpdate" asp-route-id="@item.Id" class="px-2   text-primary"><i class="uil uil-pen font-size-18"></i></a>
                                        </li>
                                        <li class="list-inline-item">
                                            <a  asp-area="" asp-controller="Products" asp-action="ProductActive" asp-route-id="@item.Id" class="btn bg-gradient-success btn-sm btn-rounded waves-effect waves-light ">Aktif Yap</a>
                                        </li>   
                                    </ul>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>

@section Scripts{
    <script type="text/javascript">
        $(document).ready(function() {
            $('#ProductsCategoryTable').DataTable(
                {
                    language: {

                        info: "_TOTAL_ kayıttan _START_ - _END_ arasındaki kayıtlar gösteriliyor",
                        infoEmpty: "Kayıt yok",
                        loadingRecords: "Yükleniyor...",
                        zeroRecords: "Eşleşen kayıt bulunamadı",
                        search: "Arama:",
                        infoFiltered: "(toplam _MAX_ kayıt içerisinden bulunan)",

                        buttons: {
                            copyTitle: "Panoya kopyalandı.",
                            copySuccess: "Panoya %d satır kopyalandı",
                            copy: "Kopyala",
                            print: "Yazdır",
                        },
                        paginate: {
                            first: "İlk",
                            last: "Son",
                            next: "Sonraki",
                            previous: "Önceki"
                        },

                    },
                    dom: 'Bfrtip',
                    buttons: ['copy', 'excel', 'pdf', 'print'],
                    responsive: true
                }
            );
        });
    </script>
}

