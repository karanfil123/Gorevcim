@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model List<ProductCategoryDto>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="row mb-2">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <a asp-area="" asp-controller="Products" asp-action="ProductSave" class="btn btn-success waves-effect waves-light"><i class="mdi mdi-plus me-2"></i>Ürün Ekle</a>
                        </div>
                    </div>
                </div>
                <!-- end row -->

                <table class="table table-centered" id="ProductsCategoryTable">
                    <thead>
                        <tr>

                            <th scope="col">Id</th>
                            <th scope="col">Name</th>
                            <th scope="col">Category</th>
                            <th scope="col">Code</th>
                            <th scope="col">Barcode</th>
                            <th scope="col">Sale Price</th>
                            <th scope="col">TechnicalWebUrl</th>
                            <th scope="col">ExplanationWebUrl</th>
                            <th scope="col" style="width: 200px;">Processing</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>   @item.Id </td>
                                <td>@item.Name</td>
                                <td>@item.Category.Name</td>
                                <td>@item.Code</td>
                                <td>@item.Barcode</td>
                                <td>@item.SalePrice</td>
                                <td>@item.TechnicalWebUrl</td>
                                <td>@item.ExplanationWebUrl</td>
                                <td>
                                    <ul class="list-inline mb-0">
                                        <li class="list-inline-item">
                                            <a href="/Products/ProductUpdate/@item.Id" class="px-2 text-primary"><i class="uil uil-pen font-size-18"></i></a>
                                        </li>
                                        <li class="list-inline-item">
                                            <a href="/Products/ProductDelete/@item.Id" class="px-2 text-danger"><i class="uil uil-trash-alt font-size-18"></i></a>
                                        </li>
                                        <li class="list-inline-item dropdown">
                                            <a class="text-muted dropdown-toggle font-size-18 px-2" href="#" role="button" data-bs-toggle="dropdown" aria-haspopup="true">
                                                <i class="uil uil-ellipsis-v"></i>
                                            </a>

                                            <div class="dropdown-menu dropdown-menu-end">
                                                <a class="dropdown-item" href="#">Ürün Detay 1</a>
                                                <a class="dropdown-item" href="#">Ürün Detay 2</a>
                                                <a class="dropdown-item" href="#">Ürün Detay 3</a>
                                            </div>
                                        </li>
                                    </ul>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>

@section Scripts{
<script type="text/javascript">
       $(document).ready(function() {
       $('#ProductsCategoryTable').DataTable(
    {
           language :{

        info: "_TOTAL_ kayıttan _START_ - _END_ arasındaki kayıtlar gösteriliyor",
        infoEmpty: "Kayıt yok",
        loadingRecords: "Yükleniyor...",
         zeroRecords: "Eşleşen kayıt bulunamadı",
          search: "Arama:",
        infoFiltered: "(toplam _MAX_ kayıt içerisinden bulunan)",

         buttons: {
            copyTitle: "Panoya kopyalandı.",
            copySuccess: "Panoya %d satır kopyalandı",
            copy: "kopyala",
            print:"Yazdır",
            },
        paginate: {
            first: "İlk",
            last: "Son",
            next: "Sonraki",
            previous: "Önceki"
        },

           },
           dom: 'Bfrtip',
           buttons:['copy','excel','pdf','print'],
           responsive:true }
       );
       });




</script>
}
